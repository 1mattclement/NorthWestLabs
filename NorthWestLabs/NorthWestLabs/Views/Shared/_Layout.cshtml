<!DOCTYPE html>
<html>
<head>
   <meta charset="utf-8" />
   <meta name="viewport" content="width=device-width, initial-scale=1">
   <title>@ViewBag.Title - Northwest Labs Pharmaceutical</title>
   <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
   <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
   <script src="~/Scripts/modernizr-2.6.2.js"></script>


</head>
<body>
   <nav class="navbar navbar-default">
      <div class="container-fluid">

         <!-- Collect the nav links, forms, and other content for toggling -->
         <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
               <li><a href="@Url.Action("Index", "Home")">Home</a></li>
               <li><a href="@Url.Action("About", "Home")">About</a></li>
               <li><a href="@Url.Action("Contact", "Home")">Contact</a></li>
               <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Log In <span class="caret"></span></a>
                  <ul class="dropdown-menu">
                     <li><a href="@Url.Action("Login", "Home")">Customers</a></li>
                     <li><a href="@Url.Action("Login", "Home")">Employees</a></li>
                  </ul>
               </li>
            </ul>
         </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
   </nav>

   <div class="container body-content">
      @RenderBody()
      <hr />
      <nav class="navbar-fixed-bottom navbar-default">
            <p style="padding-left:15px">&copy; @DateTime.Now.Year - Northwest Labs Pharmaceutical</p>
      </nav>
   </div>
   <script src="~/Scripts/jquery-1.10.2.min.js"></script>
   <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>