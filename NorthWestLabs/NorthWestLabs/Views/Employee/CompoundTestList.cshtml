@model IEnumerable<NorthWestLabs.Models.CompoundTests>

@{
    ViewBag.Title = "CompoundTestList";
}

<div class="centered"><h2 class="myFooterText text2">Compound Test List</h2></div>


<div class="table-responsive">
   <table class="table table-bordered" style="border-width:thick">
      <tr class="label-info">
         <th>
            @Html.DisplayNameFor(model => model.Employees.EmpFirstName)
         </th>
         <th>
            @Html.DisplayNameFor(model => model.Status.StatusDescription)
         </th>
         <th>
            @Html.DisplayNameFor(model => model.TestCatalog.TestTypeID)
         </th>
         <th>
            @Html.DisplayNameFor(model => model.WorkOrders.Comments)
         </th>
         <th>
            @Html.DisplayNameFor(model => model.LTNumber)
         </th>
         <th>
            @Html.DisplayNameFor(model => model.SampleID)
         </th>
          <th></th>
      </tr>

      @foreach (var item in Model)
      {
         <tr class="active">
            <td>
               @Html.DisplayFor(modelItem => item.Employees.EmpFirstName)
            </td>
            <td>
               @Html.DisplayFor(modelItem => item.Status.StatusDescription)
            </td>
            <td>
               @Html.DisplayFor(modelItem => item.TestCatalog.TestTypeID)
            </td>
            <td>
               @Html.DisplayFor(modelItem => item.WorkOrders.Comments)
            </td>
            <td>
               @Html.DisplayFor(modelItem => item.LTNumber)
            </td>
            <td>
               @Html.DisplayFor(modelItem => item.SampleID)
            </td>
            <td>
               @Html.ActionLink("Update Test", "EditTest", new { id = item.TestID })

            </td>
         </tr>
      }
   </table>
</div>