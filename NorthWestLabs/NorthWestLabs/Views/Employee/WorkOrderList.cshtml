@model IEnumerable<NorthWestLabs.Models.WorkOrders>

@{
    ViewBag.Title = "WorkOrderList";
}

<h2>WorkOrderList</h2>

<div class="table-responsive">
   <table class="table table-bordered" style="border-width:thick">
      <tr class="active">
         <th class="label-info">
            @Html.DisplayNameFor(model => model.Customers.CustFirstName)
         </th>
         <th>
            @Html.DisplayNameFor(model => model.Comments)
         </th>
         <th>
            @Html.DisplayNameFor(model => model.RushOrder)
         </th>
         <th>
            @Html.DisplayNameFor(model => model.LTNumber)
         </th>
         <th></th>
      </tr>

      @foreach (var item in Model)
      {
         <tr class="active">
            <td>
               @Html.DisplayFor(modelItem => item.Customers.CustFirstName)
            </td>
            <td>
               @Html.DisplayFor(modelItem => item.Comments)
            </td>
            <td>
               @Html.DisplayFor(modelItem => item.RushOrder)
            </td>
            <td>
               @Html.DisplayFor(modelItem => item.LTNumber)
            </td>
            <td>
               @Html.ActionLink("View Tests", "CompoundTestList", new { id = item.WorkOrderID })

            </td>
         </tr>
      }
   </table>
</div>