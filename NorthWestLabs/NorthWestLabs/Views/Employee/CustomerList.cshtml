@model IEnumerable<NorthWestLabs.Models.Customers>

@{
    ViewBag.Title = "Customer List";
}

<h2>Customer List</h2>

<div class="table-responsive">
   <table class="table table-bordered">
      <tr class="active">
         <th>
            @Html.DisplayNameFor(model => model.Employees.EmpFirstName)
         </th>
         <th>
            @Html.DisplayNameFor(model => model.CustFirstName)
         </th>
         <th>
            @Html.DisplayNameFor(model => model.CustLastName)
         </th>
         <th>
            @Html.DisplayNameFor(model => model.CustAddress)
         </th>
         <th>
            @Html.DisplayNameFor(model => model.CustState)
         </th>
         <th>
            @Html.DisplayNameFor(model => model.CustZIP)
         </th>
         <th>
            @Html.DisplayNameFor(model => model.CustPhone)
         </th>
         <th>
            @Html.DisplayNameFor(model => model.CustEmail)
         </th>
         <th>
            @Html.DisplayNameFor(model => model.Comments)
         </th>
         <th></th>
      </tr>

      @foreach (var item in Model)
      {
         <tr>
            <td>
               @Html.DisplayFor(modelItem => item.Employees.EmpFirstName)
            </td>
            <td>
               @Html.DisplayFor(modelItem => item.CustFirstName)
            </td>
            <td>
               @Html.DisplayFor(modelItem => item.CustLastName)
            </td>
            <td>
               @Html.DisplayFor(modelItem => item.CustAddress)
            </td>
            <td>
               @Html.DisplayFor(modelItem => item.CustState)
            </td>
            <td>
               @Html.DisplayFor(modelItem => item.CustZIP)
            </td>
            <td>
               @Html.DisplayFor(modelItem => item.CustPhone)
            </td>
            <td>
               @Html.DisplayFor(modelItem => item.CustEmail)
            </td>
            <td>
               @Html.DisplayFor(modelItem => item.Comments)
            </td>
            <td>
               @Html.ActionLink("Work Order", "WorkOrderList", new { id = item.CustomerID })

            </td>
         </tr>
      }
   </table>
</div>