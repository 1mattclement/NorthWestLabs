@model IEnumerable<NorthWestLabs.Models.WorkOrders>

@{
    ViewBag.Title = "Work Order List";
}

<h2>Work Order List</h2>

<div class="table-responsive">
   <table class="table table-bordered">
      <tr style="color:white">
         <th>
            @Html.DisplayNameFor(model => model.Customers.CustFirstName)
         </th>
         <th>
            @Html.DisplayNameFor(model => model.WorkOrderID)
         </th>
         <th>
            @Html.DisplayNameFor(model => model.Comments)
         </th>
         <th>
            @Html.DisplayNameFor(model => model.RushOrder)
         </th>
         <th>
            @Html.DisplayNameFor(model => model.LTNumber)
         </th>
         <th></th>
      </tr>

      @foreach (var item in Model)
      {
         <tr class="active">
            <td>
               @Html.DisplayFor(modelItem => item.Customers.CustFirstName)
            </td>
            <td>
               @Html.DisplayFor(model => item.WorkOrderID)
            </td>
            <td>
               @Html.DisplayFor(modelItem => item.Comments)
            </td>
            <td>
               @Html.DisplayFor(modelItem => item.RushOrder)
            </td>
            <td>
               @Html.DisplayFor(modelItem => item.LTNumber)
            </td>
            <td>
               @Html.ActionLink("View Test Status", "TestList", new { id = item.WorkOrderID })
            </td>
         </tr>
       }
   </table>
</div>